<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="133dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/background_rounded_8_grey_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/badge_text_view" />

    <TextView
        android:id="@+id/badge_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_8_blue"
        android:fontFamily="@font/sf_pro_display_regular"
        android:paddingHorizontal="10dp"
        android:paddingVertical="2dp"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Самый удобный " />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view"
        tools:text="6 990 P" />

    <View
        android:id="@+id/icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/background_circle_red"
        app:layout_constraintStart_toStartOf="@+id/price_text_view"
        app:layout_constraintTop_toBottomOf="@+id/price_text_view" />

    <TextView
        android:id="@+id/departure_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toBottomOf="@+id/price_text_view"
        tools:text="03:15 " />

    <View
        android:id="@+id/divider_text"
        android:layout_width="10dp"
        android:layout_height="1dp"
        android:background="@color/grey_6"
        android:layout_marginTop="3dp"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/departure_time_text_view"
        app:layout_constraintStart_toEndOf="@+id/departure_time_text_view"
        app:layout_constraintTop_toTopOf="@+id/departure_time_text_view"
        tools:text="-" />

    <TextView
        android:id="@+id/arrival_time_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/departure_time_text_view"
        app:layout_constraintStart_toEndOf="@+id/divider_text"
        app:layout_constraintTop_toTopOf="@+id/departure_time_text_view"
        tools:text="07:10 " />

    <TextView
        android:id="@+id/departure_city_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/grey_6"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/departure_time_text_view"
        app:layout_constraintTop_toBottomOf="@+id/departure_time_text_view"
        tools:text="VKO " />

    <TextView
        android:id="@+id/arrival_city_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/grey_6"
        android:textSize="14sp"
        android:textStyle="italic"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@+id/arrival_time_text_view"
        app:layout_constraintTop_toBottomOf="@+id/arrival_time_text_view"
        tools:text="AER " />

    <TextView
        android:id="@+id/flight_info_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sf_pro_display_regular"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/arrival_time_text_view"
        app:layout_constraintTop_toTopOf="@+id/arrival_time_text_view"
        app:layout_constraintVertical_bias="1.0"
        tools:text="4ч в пути / Без пересадок" />


</androidx.constraintlayout.widget.ConstraintLayout>